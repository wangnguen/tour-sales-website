extends ../layouts/default.pug
block main
  if(permissions.includes("news-create"))
    h1.box-title Tạo bài viết

    .section-8
      form#news-create-form
        .inner-group
          label(class="inner-label" for="name") Tên bài viết
          input(type="text" id="name" name="name")
        .inner-group
          label(class="inner-label" for="position") Vị trí
          input(type="number" id="position" name="position")
        .inner-group
          label(class="inner-label" for="status") Trạng thái
          select(id="status" name="status")
            option(value="active") Hoạt động
            option(value="inactive") Tạm dừng
        .inner-group.inner-two-col
          label(class="inner-label" for="avatar") Ảnh đại diện
          div(class="inner-upload-image")
            input(type="file" id="avatar" accept="image/*" filepond-image name="avatar")
        .inner-group.inner-two-col
          label(class="inner-label" for="description") Mô tả
          textarea(id="description" textarea-mce name="description")
        .inner-group.inner-two-col
          label(class="inner-label" for="content") Nội dung bài viết
          textarea(id="content" textarea-mce name="content")
        .inner-button.inner-two-col
          button Tạo mới
      .inner-back
        a(href=`/${pathAdmin}/news/list`) Quay lại danh sách