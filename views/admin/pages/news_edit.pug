extends ../layouts/default.pug
block main
  if(permissions.includes("news-edit"))
    h1.box-title Chỉnh sửa bài viết

    .section-8
      form#news-edit-form
        .inner-group(style="display: none;")
          label(class="inner-label" for="id" ) Id
          input(type="text" id="id" name="id" value=newsDetail.id)
        .inner-group
          label(class="inner-label" for="name") Tên bài viết
          input(type="text" id="name" name="name" value=newsDetail.name)
        .inner-group
          label(class="inner-label" for="position") Vị trí
          input(type="number" id="position" name="position" value=newsDetail.position)
        .inner-group
          label(class="inner-label" for="status") Trạng thái
          select(id="status" name="status")
            option(value="active" selected=newsDetail.status === "active") Hoạt động
            option(value="inactive" selected=newsDetail.status === "inactive") Tạm dừng
        .inner-group.inner-two-col
          label(class="inner-label" for="avatar") Ảnh đại diện
          div(class="inner-upload-image")
            input(type="file" id="avatar" accept="image/*" filepond-image name="avatar" image-default=newsDetail.avatar || "")
        .inner-group.inner-two-col
          label(class="inner-label" for="description") Mô tả
          textarea(id="description" textarea-mce name="description") #{newsDetail.description}
        .inner-group.inner-two-col
          label(class="inner-label" for="content") Nội dung bài viết
          textarea(id="content" textarea-mce name="content") #{newsDetail.content}
        .inner-button.inner-two-col
          button Cập nhật
      .inner-back
        a(href=`/${pathAdmin}/news/list`) Quay lại danh sách