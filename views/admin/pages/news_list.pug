extends ../layouts/default.pug
include ../mixins/paginations.pug
block main
  h1.box-title Quản lý bài viết

  //- Section 4
  .section-4
    .inner-wrap
      .inner-item.inner-label
        <i class="fa-solid fa-filter"></i> Bộ lọc
      .inner-item
        select(filter-status)
          option(value="") Trạng thái
          option(value="active") Hoạt động
          option(value="inactive") Tạm dừng
      .inner-item
        select(filter-created-by)
            option(value="") Người tạo
            each item in accountAdminList
              option(value=item.id) #{item.fullName}
      .inner-item.inner-date
        input(type="date"
          filter-start-date
          )
        span -
        input(type="date"
          filter-end-date
          )
      .inner-item.inner-reset(filter-reset)
        <i class="fa-solid fa-rotate-left"></i> Xóa bộ lọc
  //- End Section 4

  //- Section 5
  .section-5
    .inner-wrap
      .inner-change-status(
        change-multi
        data-api=`/${pathAdmin}/news/change-multi`
      )
        .inner-item
          select
            option(value="") -- Hành động --
            if(permissions.includes("news-edit"))
                option(value="active") Hoạt động
                option(value="inactive") Dừng hoạt động
            if(permissions.includes("news-delete"))
              option(value="delete") Xóa
        .inner-item
          button Áp dụng
      .inner-search
        <i class="fa-solid fa-magnifying-glass"></i>
        input(type="text" placeholder="Tìm kiếm" search)
      .inner-button-create
        if(permissions.includes("news-create"))
          a(href=`/${pathAdmin}/news/create`) + Tạo mới
      if(permissions.includes("news-trash"))
          .inner-button-trash
            a(
              href=`/${pathAdmin}/news/trash`
            ) Thùng rác
  //- End Section 5

  //- Section 6
  .section-6
    .table-2
      table
        thead
          tr
            th(class="inner-center")
              input(type="checkbox" class="inner-check" check-all)
            th Tên bài viết
            th Ảnh đại diện
            th(class="inner-center") Vị trí
            th(class="inner-center") Trạng thái
            th Tạo bởi
            th Cập nhật bởi
            th Hành động
        tbody
          each item in newsList
              tr
                td(class="inner-center")
                  input(type="checkbox" class="inner-check" check-item=item.id)
                td #{item.name}
                td
                  img(src=item.avatar class="inner-avatar")
                td(class="inner-center") #{item.position}
                td(class="inner-center")
                  if(item.status === "active")
                    .badge.badge-green Hoạt động 
                  else if(item.status === "inactive")
                    .badge.badge-red Tạm dừng
                td
                  div #{item.createdByFullName}
                  div.inner-time #{item.createdAtFormat}
                td
                  div #{item.updatedByFullName}
                  div.inner-time #{item.updatedAtFormat}
                td
                  .inner-buttons
                    if(permissions.includes("news-edit"))
                      a(
                        href=`/${pathAdmin}/news/edit/${item.id}`
                        class="inner-edit"
                      ) <i class="fa-regular fa-pen-to-square"></i>
                    if(permissions.includes("news-delete"))
                      button(
                        class="inner-delete"
                        button-delete
                        data-api=`/${pathAdmin}/news/delete/${item.id}`
                      ) <i class="fa-regular fa-trash-can"></i>
  //- End Section 6

  //- Section 7
  +paginations(pagination,newsList)
  //- End Section 7