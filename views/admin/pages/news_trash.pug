extends ../layouts/default.pug
include ../mixins/paginations.pug

block main
  if(permissions.includes("news-trash"))
    h1.box-title Thùng rác bài viết

    //- Section 5
    .section-5
      .inner-wrap
        .inner-change-status(
          change-multi
          data-api=`/${pathAdmin}/news/trash/change-multi`
        )
          .inner-item
            select
              option(value="") -- Hành động --
              option(value="undo") Khôi phục
              option(value="delete-destroy") Xóa vĩnh viễn
          .inner-item
            button Áp dụng
        .inner-search
          <i class="fa-solid fa-magnifying-glass"></i>
          input(
            type="text"
            placeholder="Tìm kiếm" 
            search
          )
    //- End Section 5

    //- Section 6
    .section-6
      .table-2
        table
          thead
            tr
              th(class="inner-center")
                input(type="checkbox" class="inner-check" check-all)
              th Tên danh mục
              th Ảnh đại diện
              th(class="inner-center") Vị trí
              th(class="inner-center") Trạng thái
              th Tạo bởi
              th Xoá bởi
              th Hành động
          tbody
            each item in newsList
              tr
                td(class="inner-center")
                  input(type="checkbox" class="inner-check" check-item=item.id
                  )
                td #{item.name}
                td
                  img(src=item.avatar class="inner-avatar")
                td(class="inner-center") #{item.position}
                td(class="inner-center")
                  if (item.status == "active")
                    .badge.badge-green Hoạt động
                  else if (item.status == "inactive")
                    .badge.badge-red Tạm dừng
                td
                  div #{item.createdByFullName}
                  div.inner-time #{item.createdAtFormat}
                td
                  div #{item.deletedByFullName}
                  div.inner-time #{item.deletedAtFormat}
                td
                  .inner-buttons
                    button(
                      class="inner-undo"
                      button-delete
                      data-api=`/${pathAdmin}/news/undo/${item.id}`
                    ) <i class="fa-solid fa-rotate-left"></i>
                    button(
                      class="inner-delete"
                      button-delete
                      data-api=`/${pathAdmin}/news/delete-destroy/${item.id}`
                    ) <i class="fa-regular fa-trash-can"></i>
    //- End Section 6

    //- Section 7
    +paginations(pagination,newsList)
    //- End Section 7