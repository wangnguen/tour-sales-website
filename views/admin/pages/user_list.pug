extends ../layouts/default.pug
include ../mixins/paginations.pug

block main
  if(permissions.includes("user-view"))
    h1.box-title Quản lý người dùng

  //- Section 4
  .section-4
    .inner-wrap
      .inner-item.inner-label
        <i class="fa-solid fa-filter"></i> Bộ lọc
      .inner-item
        select(filter-status)
          option(value="") Trạng thái
          option(value="initial") Khởi tạo
          option(value="active") Hoạt động
      .inner-item.inner-date
        input(type="date" filter-start-date)
        span -
        input(type="date" filter-end-date)
      .inner-item.inner-reset(filter-reset)
        <i class="fa-solid fa-rotate-left"></i> Xóa bộ lọc
  //- End Section 4

  //- Section 5
  .section-5
    .inner-wrap
      .inner-change-status(
        change-multi
        data-api=`/${pathAdmin}/user/change-multi`
      )
        .inner-item
          select
            option(value="") -- Hành động --
            if(permissions.includes("user-edit"))
                option(value="active") Hoạt động
                option(value="inactive") Tạm dừng
            if(permissions.includes("user-delete"))
                option(value="delete") Xóa
        .inner-item
          button Áp dụng
      .inner-search
        <i class="fa-solid fa-magnifying-glass"></i>
        input(
          type="text"
          placeholder="Tìm kiếm"
          search
        )
  //- End Section 5

  //- Section 6
  .section-6
    .table-2
      table
        thead
          tr
            th(class="inner-center")
              input(type="checkbox" class="inner-check" check-all)
            th Họ tên
            th(class="inner-center") Ảnh đại diện
            th Email
            th Số điện thoại
            th Địa chỉ
            th Trạng thái
            th Hành động
        tbody
          each item in userList
            tr
              td(class="inner-center")
                input(type="checkbox" class="inner-check" check-item=item.id)
              td #{item.fullName}
              td(class="inner-center")
                img(src=item.avatar class="inner-avatar")
              td #{item.email}
              td #{item.phone}
              td #{item.address}
              td
                if(item.status == "initial")
                  .badge.badge-orange Khởi tạo
                else if (item.status == "active")
                  .badge.badge-green Hoạt động
                else if (item.status == "inactive")
                  .badge.badge-red Tạm dừng
              td
                .inner-buttons
                  if(permissions.includes("user-delete"))
                    button(
                      class="inner-delete"
                      button-delete
                      data-api=`/${pathAdmin}/user/delete/${item.id}`
                    ) <i class="fa-regular fa-trash-can"></i>
  //- End Section 6

  //- Section 7
  +paginations(pagination, userList)
  //- End Section 7