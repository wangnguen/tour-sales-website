extends ../layouts/default.pug
include ../mixins/product_item.pug

block main
  // Section 1
  .section-1
    .container
      .inner-wrap
        h1.inner-title(
          data-aos-duration="800" 
          data-aos="fade-up"
          )
          | Du lịch Châu Á - Khám phá Mỹ, Úc, Âu
          br
          | Đi nơi đâu bạn muốn
        p.inner-desc(
          data-aos-delay="150" 
          data-aos-duration="800" 
          data-aos="fade-up"
          )
          | Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua
        form.inner-form(
          data-aos-delay="300" 
          data-aos-duration="800" 
          data-aos="fade-up" 
          action="#"
          form-search
          )
          .inner-box.inner-address
            .inner-input-group
              img.inner-icon(src="/assets/images/icon-address.svg")
              input.inner-input(
                placeholder="Bạn muốn đi đâu?" 
                type="text"
                name="locationTo"
                )
              i.fa-solid.fa-angle-down.inner-down
            .inner-suggest
              .inner-suggest-title
                i.fa-solid.fa-location-dot
                | Địa Điểm Hot
              .inner-suggest-list
                .inner-item
                  .inner-item-image
                    img(
                      alt="" 
                      src="/assets/images/product-1.jpg"
                      )
                  .inner-item-content
                    .inner-item-title Nhật Bản
                    .inner-item-desc 50 tours
                .inner-item
                  .inner-item-image
                    img(
                      alt="" 
                      src="/assets/images/product-2.jpg"
                      )
                  .inner-item-content
                    .inner-item-title Phú Quốc
                    .inner-item-desc 50 tours
                .inner-item
                  .inner-item-image
                    img(
                      alt="" 
                      src="/assets/images/product-3.jpg"
                      )
                  .inner-item-content
                    .inner-item-title Singapore
                    .inner-item-desc 50 tours
          .inner-box.inner-user
            .inner-input-group
              img.inner-icon(src="/assets/images/icon-user.svg")
              input.inner-input(
                placeholder="Số lượng" 
                type="text"
                readonly
                )
              i.fa-solid.fa-angle-down.inner-down
            .inner-quantity
              .inner-item
                .inner-label Người lớn
                .inner-count
                  span.inner-down -
                  span.inner-number(stock-adult) 1
                  span.inner-up +
              .inner-item
                .inner-label Trẻ em
                .inner-count
                  span.inner-down -
                  span.inner-number(stock-children) 0
                  span.inner-up +
              .inner-item
                .inner-label Em bé
                .inner-count
                  span.inner-down -
                  span.inner-number(stock-baby) 0
                  span.inner-up +
          .inner-box.inner-calendar
            .inner-input-group
              img.inner-icon(src="/assets/images/icon-calendar.svg")
              input.inner-input(type="date" name="departureDate")
          button.inner-button(type="submit")
            i.fa-solid.fa-magnifying-glass
            | Tìm Kiếm
  // End Section 1
  // Section 2
  .section-2(
    data-aos-delay="450" 
    data-aos-duration="800" 
    data-aos="fade-up"
    )
    .container
      .inner-wrap
        .inner-info
          h2.inner-title
            | ƯU ĐÃI 2024
            br
            | TOUR GIỜ CHÓT
          .inner-desc Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor
          .inner-clock-title Kết thúc sau
          .inner-clock-number(clock-expire="2024-12-10T15:00:00")
            span.inner-item
              .inner-number 00
              .inner-label Ngày
            span.inner-item
              .inner-number 00
              .inner-label Giờ
            span.inner-item
              .inner-number 00
              .inner-label Phút
            span.inner-item
              .inner-number 00
              .inner-label Giây
          .inner-discount-title GIẢM ĐẾN
          .inner-discount-price
            | 990.000
            span.inner-unit đ
        .inner-list
          .swiper.swiper-section-2
            .swiper-wrapper
              each item in tourListSection2
                .swiper-slide
                  // Product Item
                  +product_item(item)
                  // End Product Item
  // End Section 2

